<div class="row">
  <div class="col-md-8">
    
    <h1><span class="accent-word-2">Forgot your password? </span></h1><hr>
  </div>
</div>

<div class="row">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
  <div class="col-md-6">
    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'Enter email' %>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:'my-btn', type:'submit' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  </div>
    
</div>