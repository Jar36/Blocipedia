<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Oswald|Special+Elite', media: 'all', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <div class="container" id="sign-in-nav">
      <ul class="pull-right">
        <% if user_signed_in? %>
          Signed in as: <strong><%= current_user.email %></strong> |
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -</li>
          <li><%= link_to "Log In", new_user_session_path, :class => 'navbar-link'  %></li>
        <% end %>
      </ul>
    </div>

    <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
    <% end %>
       
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
