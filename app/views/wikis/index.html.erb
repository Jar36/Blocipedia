<div class="container wiki-module">
    <div>
        <%= link_to "Create a new Wiki", new_wiki_path, class: 'btn-block animated-button wiki-my-btn text-center' %>
    </div>
    
    <% @wikis.each do |wiki| %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="wiki-header"><%= link_to wiki.title, wiki_path(wiki.id) %></h2>
            </div>
            <div class="panel-body">
                <%= link_to wiki do %> 
                    <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                <% end %>
                <%= link_to wiki, method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' } do %>
                    <span class="pull-right" style="color:#9E1111;"><i class="fa fa-trash-o" style="color:#9E1111;" aria-hidden="true"></i> Delete</span>
                <% end %>
            </div>
        </div>
    <% end %>
</div>











